<?xml version="1.0" encoding="UTF-8"?>
<profilesXml xmlns="http://maven.apache.org/PROFILES/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://maven.apache.org/PROFILES/1.0.0 http://maven.apache.org/xsd/profiles-1.0.0.xsd">
    <profiles>
        <profile>
            <id>build-adaptor-only</id>
            <activation>
                <file>
                    <missing>../pom.xml</missing>
                </file>
            </activation>
            <repositories>
                <repository>
                    <id>in2p3-maven2-repository-libraries</id>
                    <url>http://maven.in2p3.fr</url>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>in2p3-maven2-repository-plugins</id>
                    <url>http://maven.in2p3.fr</url>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
</profilesXml>